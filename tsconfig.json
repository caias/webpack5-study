{
  "compilerOptions": {
    // leave JSX as it is
    "jsx": "react",
    // resolve modules as you would expect
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      // "react-redux",
    ],
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2015",
      "es6",
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*"
  ]
}